<%- include('header.ejs') %>

<section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-wrap -m-4">
        <% if(body.blogs.length>0){
            body.blogs.forEach(function(row){
            %>
            <div class="p-4 lg:w-1/3">
                <div class="h-full bg-gray-100 bg-opacity-75 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
                  <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3"><%= row.title %></h1>
                  <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"> by <%= body.user[row.index].displayName %></h2>
                  <p class="leading-relaxed mb-3"><%- row.body %></p>
                  <div><a href="/blog/<%= row._id %>" class="text-indigo-500 inline-flex items-center">Read More
                    <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M5 12h14"></path>
                      <path d="M12 5l7 7-7 7"></path>
                    </svg>
                  </a></div>
                  <% if(mydata.googleId == body.user[row.index].googleId){ %>
                    <div class="text-center mt-2 leading-none flex justify-center absolute bottom-0 left-0 w-full py-4">
                      <span class="text-gray-400 mr-3 inline-flex items-center leading-none text-sm pr-3 py-1 border-r-2 border-gray-200">
                        <a href="/edit/<%= row._id %>" class="text-blue-900 bg-blue-300 p-2 rounded">
                          <i class="fa fa-pencil-square-o"></i>
                      </a>
                      <a href="/delete/<%= row._id %>" class="ml-2 text-red-900 bg-red-300 p-2 rounded " onclick="return confirm('Are you sure?')">
                          <i class="fa fa-trash-o"></i>
                      </a>
                      </span>
                      
                    </div>
                  <% } %>  
                  
                </div>
              </div>
            <%   })} %>
      </div>
    </div>
  </section>
  
<%- include('footer.ejs') %>